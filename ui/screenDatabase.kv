
<CMDTextField@MDTextField>:
   
    line_spacing: 10
    

<ScreenDb>:
    name:"screendb"
    MDTabs:
        id: tabs
        lock_swiping:True

        Tab:
            text: 'Student'
            ScrollView:
                effect_cls:"ScrollEffect"
                MDGridLayout:
                    cols:1
                    padding:[40,10,40,10]
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    adaptive_height: True
                    CMDTextField:
                        id:txt_name
                        hint_text: "Student Name"
                    CMDTextField:
                        id:txt_fname
                        hint_text: "Father's Name"
                    CMDTextField:
                        id:txt_mname
                        hint_text: "Mother's Name"
                    CMDTextField:
                        id:txt_phone
                        hint_text: "Contact Number"
                    CMDTextField:
                        id:txt_addr
                        hint_text: "Address"
                    CMDTextField:
                        id:txt_class
                        hint_text: "Class"
                    CMDTextField:
                        id:txt_section
                        hint_text: "Section"
                    CMDTextField:
                        id:txt_rno
                        hint_text: "Roll No"
                        input_filter:root.filter
                    CMDTextField:
                        id:txt_ano
                        hint_text: "Addmission No"
                        input_filter:root.filter
                    MDGridLayout:                        
                        rows: 1
                        adaptive_height: True
                        spacing:[20,20]
                        MDFillRoundFlatIconButton:
                            text: 'Add'
                            icon: 'account-plus'
                            on_release:root.btn_add_click()   
                        MDFillRoundFlatIconButton:
                            text: 'Edit Detail'
                            icon: 'account-edit'
                            on_release:root.btn_update_click()
                        MDFillRoundFlatIconButton:
                            text: 'Find'
                            icon: 'account-search'
                            on_release:root.btn_Find_click()
                        MDFillRoundFlatIconButton:
                            text: 'Remove'
                            icon: "account-remove"
                            on_release:root.btn_Remove_click()
                        MDFillRoundFlatIconButton:
                            text: 'Clear'
                            icon: 'eraser'
                            on_release:root.btn_clear_click()
                        MDFillRoundFlatIconButton:
                            icon: 'tools' 
                            text: 'setting'                         
                            on_release:root.btn_setting_click()

        Tab:
            text:"Marks"
            ScrollView:
                effect_cls:"ScrollEffect"
                MDGridLayout:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    cols:1
                    padding:[40,40,40,40]
            
                    adaptive_height: True
                    MDLabel:
                        text:"English Maths Science Computer Hindi Social Music Art"
                        size_hint: (1, None)
                   
                        height: 30
                    CMDTextField:
                        id:txt_marks
                        hint_text:"Enter marks seperated by space"
                    CMDTextField:
                        id:txt_an
                        hint_text: "Addmission No"
                        input_filter:root.filter
                    MDGridLayout:
                        rows:1
                        spacing: 10
                        MDFillRoundFlatIconButton:
                            text: 'Add/Update'
                            icon: 'account-plus'
                            on_release:root.add_marks()
                        MDFillRoundFlatIconButton:
                            text: 'Find'
                            icon: 'account-search'
                            on_release:root.find_marks()
                        MDFillRoundFlatIconButton:
                            text: 'Create Report Card'
                            icon: 'account-details'
                            on_release:root.create_card()
        Tab:
            text:"Pay Fee"
            MDGridLayout:
                cols:1
                padding:[40,10,40,10]
                pos_hint: {'center_x': .5, 'center_y': .5}
                MDDropDownItem:
                    id:item_month
                    text:root.format_date()
                    on_release:root.select_date()
                CMDTextField:
                    id:txt_addn
                    hint_text: "Addmission Number"
                    input_filter:root.filter
                CMDTextField:
                    id:txt_tuttion_fee
                    hint_text: "Tution Fee"
                    
                    input_filter:root.filter
                CMDTextField:
                    id:txt_vvn
                    hint_text: "VVN"
                    
                    input_filter:root.filter
                CMDTextField:
                    id:txt_computer_fee
                    hint_text: "Computer Fee"
                    
                    input_filter:root.filter
                CMDTextField:
                    id:txt_lab_fee
                    hint_text: "Lab Fee"
                    input_filter:root.filter
                    
                CMDTextField:
                    id:txt_extra
                    hint_text: "Extra"
                    input_filter:root.filter
                    
                CMDTextField:
                    id:txt_total
                    hint_text: "Total"
                    input_filter:root.filter
                    readonly: True
                    text:"0"
                MDBoxLayout:
                    spacing: 5
                    MDFillRoundFlatButton:
                        text:"Total"
                    MDFillRoundFlatButton:
                        text:"Pay"
                    MDFillRoundFlatButton:
                        text:"Get"
                    MDFillRoundFlatButton:
                        text:"Edit"
                    MDFillRoundFlatButton:
                        text:"Save Recipt"

                        
<ScreenCard>:
    name:"screencard"
    MDIconButton:
        icon: 'download'
        pos_hint:{"right":1,"top":1}
        id:btn_save
        on_release:root.btn_save_click()
    MDIconButton:
        icon: 'arrow-left'
        pos_hint:{"left":1,"top":1}
        id:btn_back
        on_release:root.btn_back_click()
    MDCard:
        size_hint: None, None
        size: "680dp", "580dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        padding: "8dp"
        id: card_report
        MDGridLayout:
            spacing: 5
            adaptive_height:True
            rows:3
            MDLabel:
                text: (" "*46)+'Sanatan International Academy'+(" "*46)+"\n"
            MDBoxLayout:
                adaptive_height:True
                spacing: 10
                
                Image:
                    size_hint: None, None
                    size: "128dp", "128dp"
                    source: "assest/user.png"
                    pos_hint: {"center_x": .5, "center_y": .5}
                MDLabel:
                    markup: True
                    id:lbl_detail
            
            MDBoxLayout:
                cols:1
                size_hint_y: None
                height: 400
                padding:[0,0,0,0]
                #pos_hint: {"y":.08}
                pos: (44, 44)
                spacing:3

                MDTextField:
                    multiline: True
                    id:txt_sub
                    readonly: True
                MDTextField:
                    multiline: True
                    id:txt_marks
                    readonly: True
                    halign:"right"
            
